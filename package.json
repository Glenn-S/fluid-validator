{
  "name": "fluid-validator",
  "version": "1.0.2",
  "description": "An object validator for handling entity validations",
  "author": "Glenn Skelton",
  "license": "GPL-3.0-only",
  "keywords": [
    "validator",
    "validation"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Glenn-S/validator"
  },
  "bugs": {
    "url": "https://github.com/Glenn-S/validator/issues"
  },
  "homepage": "",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "eslint ./src ./test --ext .ts --fix",
    "lint": "eslint ./src ./test --ext .ts",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^4.7.4"
  },
  "resolutions": {
    "glob-parent": "^6.0.1"
  }
}
