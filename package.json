{
  "name": "validator",
  "version": "1.0.0",
  "description": "An object validator for handling entity validations",
  "main": "index.ts",
  "author": "Glenn Skelton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Glenn-S/validator"
  },
  "bugs": {
    "url": "https://github.com/Glenn-S/validator/issues"
  },
  "homepage": "",
  "scripts": {
    "start": "ts-node index.ts",
    "build": "tsc",
    "test": "jest",
    "format": "prettier --write 'src/**/*.ts' 'src/**/*.js' 'test/**/*.ts' 'test/**/*.js'",
    "prettier-watch": "onchange 'src/**/*.ts' 'src/**/*.js' 'test/**/*.ts' 'test/**/*.js' -- prettier --write {{changed}}",
    "tslint": "tslint -p tsconfig.json",
    "lint": "eslint ./src ./test --ext .ts --fix"
  },
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^4.7.4"
  }
}
